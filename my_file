pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        ECR_REPO   = "867344461647.dkr.ecr.us-east-1.amazonaws.com/hello-abdul-nginx"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/khan-e-alam-007/hello-world-k8s.git'
            }
        }

        stage('Build & Push to ECR') {
            steps {
                withAWS(region: "${AWS_REGION}", credentials: 'aws-creds') {
                    sh '''
                        echo "Logging into ECR..."
                        aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin 867344461647.dkr.ecr.$AWS_REGION.amazonaws.com
                        
                        echo "Building Docker image..."
                        docker build -t hello-abdul-nginx .
                        
                        echo "Tagging Docker image..."
                        docker tag hello-abdul-nginx:latest $ECR_REPO:latest
                        
                        echo "Pushing Docker image..."
                        docker push $ECR_REPO:latest
                    '''
                }
            }
        }
    }
}

