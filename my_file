pipeline {
    agent any

    environment {
        IMAGE_NAME     = "hello-abdul-nginx"
        CONTAINER_NAME = "my_app"
        IMAGE_TAG      = "${IMAGE_NAME}:${BUILD_NUMBER}"
    }

    options {
        skipDefaultCheckout(true)
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    triggers {
        // Jenkins will rebuild when GitHub webhook triggers
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/khan-e-alam-007/hello-world-k8s.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_TAG} ."
            }
        }

        stage('Replace Old Container') {
            steps {
                sh """
                  echo "Stopping and removing old container (if exists)..."
                  docker rm -f ${CONTAINER_NAME} || true
                  echo "Starting new container..."
                  docker run -d -p 8081:80 --name ${CONTAINER_NAME} ${IMAGE_TAG}
                """
            }
        }

        stage('Check Logs') {
            steps {
                sh "docker logs --tail 20 ${CONTAINER_NAME} || true"
            }
        }

        stage('Health Check') {
            steps {
                sh "curl -f http://localhost:8081 || (echo 'App failed to start' && exit 1)"
            }
        }
    }

    post {
        always {
            echo "Cleaning up old Docker images..."
            sh "docker image prune -af || true"
        }
    }
}

